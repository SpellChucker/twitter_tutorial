<%= @tweet.body %>
<hr />

<%= form_for @comment do |f| %>
  <%= f.text_field :body, :placeholder => "Type your comment here" %>
  <%= f.hidden_field :tweet_id, value: @tweet.id %>
  <%= f.submit %>
<% end %>

<% @tweet.comments.each do |comment| %>
  <div>
    <%= comment.user.username %>:
    <%= comment.body %> -
    <%= comment.created_at %>
  </div>
<% end %>
